{
    "expo": {
        "name": "Birkitap",
        "slug": "bir-kitap",
        "version": "0.0.4",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "light",
        "jsEngine": "hermes",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "cover",
            "backgroundColor": "#f7f9f6"
        },
        "assetBundlePatterns": ["**/*"],
        "plugins": [
            [
                "expo-build-properties",
                {
                    "android": {
                        "usesCleartextTraffic": true,
                        "enableProguardInReleaseBuilds": true
                    },
                    "ios": {
                        "deploymentTarget": "13.4"
                    }
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "custom photos permission",
                    "cameraPermission": "Allow $(PRODUCT_NAME) to open the camera",
                    "microphonePermission": false
                }
            ]
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "mobile.birkitap",
            "jsEngine": "jsc",
            "buildNumber": "2",
            "googleServicesFile": "./google-service-ios.plist"
        },
        "android": {
            "package": "mobile.birkitap",
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#F7F9F6"
            },
            "versionCode": 2,
            "googleServicesFile": "./google-services-android.json"
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "scheme": "book-crossing",
        "extra": {
            "eas": {
                "projectId": "7efb6519-6b5b-450d-8381-88ace2a66719"
            }
        }
    }
}
